// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Order {
  id            String   @id @default(cuid())
  service       String
  projectDetails String  @map("project_details")
  customerName  String   @map("customer_name")
  customerEmail String   @map("customer_email")
  customerPhone String?  @map("customer_phone")
  status        String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  paymentSlip   String?  @map("payment_slip") // base64 encoded image
  projectFiles  String?  @map("project_files") // JSON array of base64 files
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("orders")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String
  price       Float
  features    String   // JSON array of feature strings
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("services")
}
